<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText para el Cliente -->
    <EditText
        android:id="@+id/etCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cliente"
        android:inputType="textPersonName" />

    <!-- Spinner para el Tipo de Servicio -->
    <Spinner
        android:id="@+id/spTipoServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"

        android:importantForAccessibility="yes"
        android:contentDescription="Seleccionar tipo de servicio"/>

    <!-- EditText para la Fecha -->
    <EditText
        android:id="@+id/etFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (YYYY-MM-DD)"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:importantForAccessibility="yes" />

    <!-- EditText para la Hora -->
    <EditText
        android:id="@+id/etHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora (HH:mm)"
        android:inputType="time"
        android:focusable="false"
        android:clickable="true"
        android:importantForAccessibility="yes" />

    <!-- EditText para la Descripci贸n -->
    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripci贸n"
        android:inputType="textMultiLine"
        android:minHeight="80dp"
        android:importantForAccessibility="yes" />

    <!-- Spinner para el Estado -->
    <Spinner
        android:id="@+id/spEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

    <!-- LinearLayout para los botones -->
    <ImageView
        android:id="@+id/citaImagen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="16dp">

        <!-- Bot贸n para Cancelar -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:importantForAccessibility="yes" />

        <!-- Bot贸n para Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:importantForAccessibility="yes" />
    </LinearLayout>

</LinearLayout>


