<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundSoft"
        android:padding="20dp"
        android:elevation="2dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Cita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Cliente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del cliente"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/tb"
            android:layout_marginBottom="12dp" />

        <!-- Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/tb"
            android:layout_marginBottom="12dp" />

        <!-- Hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/tb"
            android:layout_marginBottom="12dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe los detalles de la cita"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/tb"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="12dp" />

        <!-- Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sbg"
            android:layout_marginBottom="16dp"
            android:entries="@array/cita_estados"
            android:spinnerMode="dropdown"/>

        <!-- Botones -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Cita"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/red" />
    </LinearLayout>
</ScrollView>


