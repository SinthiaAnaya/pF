<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- RecyclerView para mostrar la lista de pagos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPagos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnAgregarPago"
        android:layout_marginBottom="8dp" />

    <!-- FloatingActionButton para agregar un nuevo pago -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregarPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Agregar Pago"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/mas" />
</RelativeLayout>
